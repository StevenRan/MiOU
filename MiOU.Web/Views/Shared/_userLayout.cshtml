    <div class="container">
        <div style="overflow:hidden;">
            <div style="float:left;width:20%;">
                <div>我的米藕</div>
                <ul style="list-style:none;margin:0;padding:0;display:block;">
                    <li>添加藕品</li>
                    <li>我的藕品</li>                   
                </ul>
                <div>我租入的</div>
                <ul style="list-style:none;margin:0;padding:0;display:block;">
                    <li>付费租入</li>
                    <li>Vip借入</li>
                </ul>
                <div>我租出的</div>
                <ul style="list-style:none;margin:0;padding:0;display:block;">
                    <li>收费租出</li>
                    <li>Vip借出</li>
                </ul>
            </div>
            <div style="float:left;">
                @RenderBody()
            </div>
        </div>
        <footer>
            @Html.Partial("_footer")
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
